{
  "manifest_version": 2,
  "name": "YouTube Download",
  "description": "Shows the download links for youtube videos.",
  "version": "2.1.1",
  "permissions": ["https://www.youtube.com/*"],
  "content_scripts" : [
    {
      "matches" : [
		"https://www.youtube.com/*"
      ],
      "js" : ["content-script.js"],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ]
}